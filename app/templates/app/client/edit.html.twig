{% extends 'base.html.twig' %}

{% block title %}
    Регистрация
{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <div class="mb-3">
        <label for="example-text-input" class="form-label">Имя</label>

        {{ form_widget(form.first_name) }}
    {{ form_errors(form.first_name) }}
    </div>

    <div class="mb-3">
        <label for="example-text-input" class="form-label">Фамилия</label>

        {{ form_widget(form.last_name) }}
    {{ form_errors(form.last_name) }}
    </div>

    <div class="mb-3">
        <label for="example-text-input" class="form-label">Телефон</label>

        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
    </div>

    <div class="mb-3">
        <label for="example-text-input" class="form-label">Оператор</label>

        {{ form_widget(form.operator) }}
        {{ form_errors(form.operator) }}
    </div>


    <div class="mb-3">
        <label for="example-text-input" class="form-label">Электронная почта</label>
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
    </div>


    <div class="mb-3">
        <label for="example-text-input" class="form-label">Образование</label>
    {{ form_widget(form.education) }}
    {{ form_errors(form.education) }}
    </div>

    <div class="mb-3">
    {{ form_widget(form.consent_personal_data) }}
    </div>





    {{ form_end(form) }}
{% endblock %}